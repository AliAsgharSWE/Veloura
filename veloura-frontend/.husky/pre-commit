#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "🔍 Checking your code before committing..."

yarn lint-staged
RESULT=$?
if [ $RESULT -ne 0 ]; then
  echo ""
  echo "❌ Linting or formatting failed!"
  echo "💡 Please fix the above issues before committing."
  echo "💡 You can run 'yarn lint' or 'yarn format' to help fix them."
  exit 1
fi

echo "✅ Code looks good! Proceeding with commit."
