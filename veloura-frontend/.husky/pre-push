#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "🏗️ Making sure your project builds before pushing..."

yarn build
RESULT=$?
if [ $RESULT -ne 0 ]; then
  echo ""
  echo "❌ Build failed!"
  echo "💡 Please fix the build errors before pushing."
  echo "💡 Run 'yarn build' locally to debug."
  exit 1
fi

echo "🚀 Build successful! Proceeding with push."
